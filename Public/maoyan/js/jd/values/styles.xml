<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="HorizScrollViewItem">
        <item name="android:paddingRight">50dp</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:text">Sample Item</item>
    </style>

    <!-- 界面Title -->
    <style name="common_layout_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#383c43</item>
        <item name="android:textSize">17sp</item>
    </style>
    <!-- 界面Title 右侧按钮样式 -->
    <style name="common_layout_title_right_button">
        <item name="android:textColor">#383c43</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">18dip</item>
        <item name="android:paddingRight">18dip</item>
         <item name="android:background">@drawable/common_title_right_button_selector</item>
    </style>
